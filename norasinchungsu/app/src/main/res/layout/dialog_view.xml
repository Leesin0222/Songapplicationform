<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/cen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:background="@drawable/white_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="곡 신청하기"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/establishretrosans"/>

        <EditText
            android:id="@+id/songname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="50dp"
            android:gravity="center_horizontal"
            android:hint="이름 - 곡제목 형식으로 신청해주세요!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/establishretrosans"/>



    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_add"
        android:background="@drawable/dialog_circle_image"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cen"
        app:layout_constraintTop_toTopOf="@+id/cen"
        app:layout_constraintStart_toStartOf="@+id/cen"
        app:layout_constraintEnd_toEndOf="@+id/cen"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/applicatebtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="신청하기"
        android:background="@drawable/white_background"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:fontFamily="@font/establishretrosans"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="@+id/cen"
        app:layout_constraintEnd_toEndOf="@+id/cen"
        app:layout_constraintTop_toBottomOf="@+id/cen"
        app:layout_constraintBottom_toBottomOf="@+id/cen"/>

</androidx.constraintlayout.widget.ConstraintLayout>